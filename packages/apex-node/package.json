{
  "name": "@salesforce/apex-node",
  "description": "Salesforce js library for Apex",
  "version": "0.3.0",
  "author": "Salesforce",
  "bugs": "https://github.com/forcedotcom/salesforcedx-apex/issues",
  "main": "lib/src/index.js",
  "dependencies": {
    "@salesforce/core": "2.28.0",
    "faye": "1.1.3"
  },
  "devDependencies": {
    "@salesforce/ts-sinon": "^1.1.2",
    "@salesforce/ts-types": "1.2.2",
    "@types/chai": "^4",
    "@types/mkdirp": "0.5.2",
    "@types/mocha": "^5",
    "@types/node": "^10",
    "@types/sinon": "^7.5.2",
    "chai": "^4",
    "mocha": "^5",
    "mocha-junit-reporter": "^1.23.3",
    "nyc": "^14.1.1",
    "shx": "0.2.2",
    "sinon": "^7.3.1",
    "source-map-support": "^0.5.16",
    "typescript": "3.7.5"
  },
  "homepage": "https://github.com/forcedotcom/salesforcedx-apex",
  "keywords": [
    "apex",
    "force",
    "salesforce",
    "sfdx",
    "salesforcedx"
  ],
  "files": [
    "lib/src"
  ],
  "scripts": {
    "build": "shx rm -rf lib && tsc -b",
    "format": "prettier --config ../../.prettierrc --write './{src,test,scripts}/**/*.{ts,js,json}'",
    "lint": "eslint -c .eslintrc.json --ext .ts ./src ./test",
    "test": "nyc mocha",
    "package": "npm pack"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint-staged"
    }
  },
  "lint-staged": {
    "./{src,test}/**/*.{ts,js}": [
      "eslint -c .eslintrc.json --fix"
    ]
  },
  "license": "BSD-3-Clause",
  "engines": {
    "node": ">=10.17.0"
  }
}
