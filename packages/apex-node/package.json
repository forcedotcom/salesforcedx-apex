{
  "name": "@salesforce/apex-node",
  "description": "Salesforce js library for Apex",
  "version": "0.0.4",
  "author": "Salesforce",
  "bugs": "https://github.com/forcedotcom/salesforcedx-apex/issues",
  "main": "lib/index.js",
  "dependencies": {
    "@salesforce/core": "2.6.0"
  },
  "devDependencies": {
    "@salesforce/ts-sinon": "^1.1.2",
    "@salesforce/ts-types": "1.2.2",
    "@types/chai": "^4",
    "@types/mocha": "^5",
    "@types/node": "^10",
    "@types/sinon": "^7.5.2",
    "chai": "^4",
    "mocha": "^5",
    "mocha-junit-reporter": "^1.23.3",
    "nyc": "^14.1.1",
    "shx": "0.2.2",
    "sinon": "^7.3.1",
    "source-map-support": "^0.5.16",
    "ts-node": "^8.7.0",
    "typescript": "3.7.5"
  },
  "homepage": "https://github.com/forcedotcom/salesforcedx-apex",
  "keywords": [
    "apex",
    "force",
    "salesforce",
    "sfdx",
    "salesforcedx"
  ],
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "shx rm -rf lib && tsc -b",
    "format": "prettier --config ../../.prettierrc --write './{src,test,scripts}/**/*.{ts,js,json}'",
    "lint": "eslint -c .eslintrc.json --ext .ts ./src ./test",
    "test": "nyc mocha --recursive \"./test/**/*.test.ts\" --full-trace",
    "publish-apex": "yarn publish --non-interactive"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint-staged"
    }
  },
  "lint-staged": {
    "./{src,test}/**/*.{ts,js}": [
      "eslint -c .eslintrc.json --fix"
    ]
  },
  "license": "BSD-3-Clause",
  "engines": {
    "node": ">=10.17.0"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text",
      "text-summary"
    ],
    "sourceMap": true,
    "report-dir": "./test-results/coverage",
    "temp-dir": "./test-results/coverage/.nyc_output"
  }
}
